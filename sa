<script>
function addIOSClickFix(element, handler) {
  element.addEventListener("click", handler);
  element.addEventListener("touchstart", handler);
}

const startBtn = document.getElementById('startBtn');
const nameInput = document.getElementById('nameInput');

addIOSClickFix(startBtn, () => {
  const cleanName = nameInput.value
    .toLowerCase()
    .normalize("NFKD")
    .replace(/[\u200B-\u200D\uFEFF]/g, '') 
    .trim();

  if(cleanName === 'onur'){
    document.getElementById('page1').style.display='none';
    document.getElementById('page2').style.display='flex';
  } else {
    alert('Hmmm tekrar dene üòÖ');
  }
});

addIOSClickFix(document.getElementById('yesBtn'), () => {
  document.getElementById('response').innerText='Biliyodum :)';
  setTimeout(()=>{
    document.getElementById('page2').style.display='none';
    document.getElementById('page3').style.display='flex';
  },2000);
});

addIOSClickFix(document.getElementById('noBtn'), () => {
  document.getElementById('response').innerText='ƒ∞mk√¢nƒ± var mƒ± b√∂yle bir ≈üeyin sence ahahah';
});

// Bokeh partik√ºller
for(let i=0;i<25;i++){
  const bokeh = document.createElement('div');
  bokeh.className = 'particle';
  bokeh.style.top = `${Math.random()*100}%`;
  bokeh.style.left = `${Math.random()*100}%`;
  bokeh.style.width = `${5+Math.random()*5}px`;
  bokeh.style.height = bokeh.style.width;
  bokeh.style.animationDuration = `${4+Math.random()*4}s`;
  document.body.appendChild(bokeh);
}

// Ufak animasyonlu kalpler
setInterval(()=>{
  const heart = document.createElement('div');
  heart.innerText = 'üíñ';
  heart.style.position = 'absolute';
  heart.style.fontSize = `${12+Math.random()*18}px`;
  heart.style.left = `${Math.random()*95}%`;
  heart.style.top = '100%';
  heart.style.opacity = '0.8';
  heart.style.animation = `floatHeart ${4+Math.random()*4}s forwards`;
  document.body.appendChild(heart);
  setTimeout(()=>heart.remove(),8000);
},300);

// Sayfa2 ve sayfa3 kalp yaƒümuru
function heartRain(){
  const pages = ['page2','page3'];
  pages.forEach(pageId=>{
    const page = document.getElementById(pageId);
    setInterval(()=>{
      if(page.style.display!=='none'){
        const h = document.createElement('div');
        h.innerText = '‚ù§Ô∏è';
        h.style.position='absolute';
        h.style.fontSize = `${14+Math.random()*20}px`;
        h.style.left = `${Math.random()*90}%`;
        h.style.top = '100%';
        h.style.opacity = '0.8';
        h.style.animation = `floatHeart ${4+Math.random()*4}s forwards`;
        page.appendChild(h);
        setTimeout(()=>h.remove(),8000);
      }
    },350);
  });
}
heartRain();
</script>

